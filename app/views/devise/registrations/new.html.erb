<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mt-3', placeholder: "Your email address" %>
  </div>

  <div class="field">
    <%= f.text_field :firstname, class: 'form-control mt-3', placeholder: "First Name" %>
  </div>

  <div class="field">
    <%= f.text_field :lastname, class: 'form-control mt-3', placeholder: "Last Name" %>
  </div>

  <div class="field">
    <%= f.text_area :description, class: 'form-control mt-3', placeholder: "Tell us a bit about yourself." %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control mt-3', placeholder: "Password (#{@minimum_password_length} characters minimum)" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control mt-3', placeholder: "Confirm your password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-primary mt-3' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
