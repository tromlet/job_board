<%= paginate @jobs %>
<div class="tableTopper mt-3"></div>
<div class="jobTable panel panel-default">
  <table class="table table-striped table-hover mb-0">
    <thead class="bg-dark">
      <tr>
        <th scope="col">Job Title</th>
        <th scope="col">Posted By</th>
        <th scope="col">Company</th>
        <th scope="col">Location</th>
        <th scope="col">Closing Date</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr class="jobRow<%= job.id %>">
          <td><%= link_to job.title, job_path(job) %></a></td>
          <td><%= link_to "#{User.find(job.user_id).firstname} #{User.find(job.user_id).lastname}", profile_path(job.user_id) %></a></td>
          <td class="text-muted">Blank Enterprises, Ltd.</td>
          <td class="text-muted">Earth</td>
          <td class="text-muted">Tomorrow</td>
          <td><%= link_to "Apply", edit_job_path(job), class: "btn btn-success btn-sm" %></td>
          <% if job.user == current_user  %>
          <td><%= link_to "Edit", edit_job_path(job), class: "btn btn-info btn-sm" %> <%= link_to "Delete", job, method: :delete, class: "btn btn-danger btn-sm btn-deleteJob", remote: true %></td>
          <% else %>
          <td></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="tableBottomer"></div><br />

<%= paginate @jobs %>
